extends layout

block content
    main(class="flex flex-col mx-3 divide-y mb-10")
        ul 
            each val in [1,2,3,4]
                li(val=val class="hover:bg-gray-200 px-3 py-3")
                    a(class="flex justify-between" href=`/chats/${val}`)
                        div(class="flex items-center")
